.detail-box{
  
  background: #FFFFFF;
  border-radius: 24px;
  margin-top: 24rpx;
  padding: 40rpx 30rpx 80rpx 30rpx;
}
.user-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-info .user-name{
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.user-info .user-name .pic{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-info .user-name text{
  vertical-align: middle;
}
.user-info .time{
color: #999999;
font-size: 22rpx;
}
.goods-info{
  display: flex;
  justify-content: start;
  align-items: center;
  color: #999;
  font-size: 22rpx;
  padding: 20rpx 10rpx;
}
.goods-info .icon-star{
  width: 28rpx;
  height: 38rpx;
  padding-right: 9rpx;
}
.goods-info .line{
  /* color: #999; */
  padding: 0 10rpx;
}
.goods-info .goods-title{
  width: 440rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.reviews-content{
  padding: 0 10rpx;
}
.img-box {
  display: flex;
  flex-wrap: wrap;
}
.reviews-content .des{
  padding-bottom: 10rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  color: #222;
}
.reviews-content .pic{
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-bottom: 26rpx;
}
.reply-content{
  margin: 0 10rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #222;
background: #F6F6F6;
border-radius: 16rpx;
line-height: 48rpx;
}
.reply-content .title{
  font-size: 28rpx;
  font-weight: bold;
}





