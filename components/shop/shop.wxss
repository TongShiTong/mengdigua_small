.box-shadow{
  /* background: yellow; */
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 4rpx rgba(17, 17, 17, 0.05);
  border-radius: 16rpx;
  margin: 20rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}
.shop-banner{
  /* height: 204rpx; */
  width: 100%;
  overflow: hidden;
}
.shop-banner .pic{
  border-radius: 16rpx 16rpx 0 0;
  width: 100%;
  overflow: hidden;
}
.shop-box{
  display: flex;
  /* align-items: center; */
  padding: 20rpx;
}
.shop-box .shop-pic{
  width: 280rpx;
  height: 280rpx;
  overflow: hidden;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.shop-box .shop-pic .pic{
  width: 100%;
  border-radius: 12rpx;
}
.shop-box .shop-info{
  /* width: 380rpx; */
  position:relative;
  padding-top: 10rpx;
}
.shop-box .shop-info .title{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #3D3D3D;
  font-size: 26rpx;
  font-weight: bold;
  padding-top: 10rpx;
}
.shop-box .shop-info .tag-list{
  padding-top: 10rpx;
}
.shop-box .shop-info .tag-list text{
  
color: #FF8F3F;
font-size: 22rpx;
}
.shop-box .shop-info .des{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #999;
  font-size: 24rpx;
  line-height: 34rpx;
  padding-top: 10rpx;
}
.shop-box .shop-info .price{
  font-size: 24rpx;
  /* margin-top: 20rpx; */
  position: absolute;
  left: 0;
  bottom: 0rpx;
}
.shop-box .shop-info .price .red{
  color: #FF2B2B;
  font-weight: bold;
}
.shop-box .shop-info .price .new{
  font-size: 34rpx;
  padding-right: 10rpx;
}
.shop-box .shop-info .price .old{
  text-decoration: line-through;
  color: #747576;
}

.shop-scroll{
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  /* width: 680rpx;
  overflow: hidden; */
}

.shop-list{
  display: flex;

flex-direction: row;
/* align-items: center; */
 width: 100%;
/* justify-content: space-around; */

/* flex-wrap:nowrap; */
/* display: table; */

  /* align-items: center; */
}
.shop-list .shop-list-box{
  margin-right: 15rpx;
  width: 214rpx;
  /* display: table-cell; */
}
.shop-list .list-pic{
  width: 214rpx;
  height: 214prx;
  border-radius: 12rpx;
  overflow: hidden;
}
.shop-list .list-pic .pic{
  width: 100%;
}
.box-box {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop-list .list-title{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  width: 214rpx;
  color: #0A0E11;
  font-weight: bold;
}
.shop-list .list-price {
  font-size: 20rpx;
  padding-top: 10rpx;
}
.shop-list .list-price .red{
  color: #F43900;
  font-weight: bold;
}
.shop-list .list-price .new{
  font-size: 32rpx;
  padding-right: 2rpx;
}
.shop-list .list-price .old{
  text-decoration: line-through;  
  color: #8C8C8C;
  font-weight: 400;
}
.shop-list.half-path{
  justify-content: space-around;
}




.swiper-wrap{
  height: 300rpx;
  overflow: hidden;
}
.swiper-item{
  width: 100%;
  height: 300rpx;
  /* display: flex; */
}
.swiper-item .swiper-title{
  color: #3D3D3D;
  font-size: 26rpx;
  font-weight: bold;
}
.swiper-item .swiper-pic{
  width: 280rpx;
  height: 280rpx;
}
.swiper-item .swiper-pic .pic{
  width: 100%;
}



.water-flow{
  margin: 0 20rpx;
}
.shop3_box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0;
}
.shop_item {
  width: 346rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 4rpx rgba(17,17,17,0.05);
}
.shop_info_box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #222222;
  font-weight: 600;
}
.shop_img_box {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 12rpx;
}
.shop_img_box image {
  width: 100%;
  height: 100%;
}
.star_box {
  margin-top: 8rpx;
}
.star_box image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}

.shop_good {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.good_img_box {
  width: 144rpx;
  height: 144rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.good_img_box image {
  width: 100%;
  height: 100%;
}