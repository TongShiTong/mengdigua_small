/* components/navbar/index.wxss */

.nav-wrap {
  /* display: flex; */
  flex-direction: column;
  position: fixed;
  width: 100vw;
  top: -2rpx;
  background-color: transparent;
  color: #000;
  z-index: 9999;
  box-sizing: border-box;
 
  /* background-image: url(); */

  background-repeat:no-repeat; 
 background-size:100% 100%;
 -moz-background-size:100% 100%;
}

.empty-header {
  width: 100%;
}

.content-body {
  /* flex: 1; */
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
}
.nav-search-wrap{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top:15rpx;
}

.nav-search{
  
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50rpx;
  height: 64rpx;
  width: 364rpx;
  padding: 0 20rpx;
  border: 1px solid #BBBBBB;
  position: relative;
}
.search-img{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 20rpx;
  top: 15rpx;
}
.icon-clear{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
}
.search-input{
  /* display: inline-block; */
  /* width: 100%; */
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #222;
  margin: 0 50rpx 0 50rpx;
}
.icon-back{
    width: 64rpx;
    height: 64rpx;
    margin: 0 30rpx 0 10rpx;
}





