/* components/category-for-24/category.wxss */
.tab-scroll{
  white-space:nowrap;
}
.shop-tab{
  height: 92rpx;
  line-height: 92rpx;
  /* background-color: #fff; */
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  /* border-bottom: 2rpx solid rgba(203, 205, 208, 1); */
}
.shop-tab .tab{
  width: 20%;
  display: inline-block;
  text-align: center;
  position: relative;
  font-size: 28rpx;
color: #3D3D3D;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop-tab .tab.true{
  font-weight: bold;
}
.shop-tab .tab.true::after{
  content: '';
  width: 36rpx;
  height: 6rpx;
  border-radius: 6rpx;
background: #FFD300;
position: absolute;
left: 50%;
bottom: 18rpx;
transform: translate(-50%,0);
}
.box-shadow{
  margin: 20rpx 20rpx 0 20rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.shop-type{
  padding:20rpx 0;
}




.shop-type .goods-info-box{
  display: flex;
  /* margin-top: 25rpx; */
}
.shop-type .goods-info-box .goods-logo{
  width:280rpx;
  height:280rpx;
  margin-left:20rpx;
  border-radius: 8rpx;
}
.shop-type .goods-info-box .goods-info{
  width: 360rpx;
  position: relative;
}
.shop-type .goods-info-box .goods-tags{
  padding-bottom: 5rpx;
color: #FF8F3F;
font-size: 24rpx;
}
.shop-type .goods-info-box .goods-tags text{
  padding-right: 10rpx;
}
.shop-type .goods-info-box .goods-item{
  width: 360rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
font-size: 26rpx;
font-weight: bold;
color: #222222;
padding-bottom: 10rpx;
}
.shop-type .goods-info-box .goods-text{
  color: #999;
  font-size: 24rpx;
  line-height: 30rpx;
  word-wrap: break-word;
    display:-webkit-box;
    overflow:hidden;
    text-overflow:ellipsis;
    word-wrap:break-word;
    -webkit-line-clamp:4;
    -webkit-box-orient:vertical;
}
.shop-type .goods-info-box .price{
  position: absolute;
  left: 0;
  bottom: 0;
color: #FF2B2B;
font-size: 24rpx;
}
.shop-type1 .goods-info-box .new{
  font-size: 34rpx;
  margin-left: -6rpx;
}
.shop-type .goods-info-box .old{
  text-decoration: line-through;
  padding-left: 10rpx;
color: #747576;
font-size: 22rpx;
}
.shop-type .goods-info{
  width: 520rpx;
  margin-left: 20rpx;
}





