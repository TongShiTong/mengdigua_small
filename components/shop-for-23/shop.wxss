}
.shop-type1 .shop-tag text{
  
background: linear-gradient(90deg, #FFECD1 0%, #E6C897 100%);
height: 28rpx;
line-height: 28rpx;
font-size: 20rpx;
padding: 0 10rpx;
color: #552D09;
border-radius: 4rpx;
margin-right: 8rpx;
}
.shop-type1 .goods-info-box{
  display: flex;
  margin-top: 25rpx;
