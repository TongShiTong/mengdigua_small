/* components/shop-for-23/shop.wxss */
.tab-scroll{
  white-space:nowrap;
}
.shop-tab{
  height: 92rpx;
  line-height: 92rpx;
  /* background-color: #fff; */
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  /* border-bottom: 2rpx solid rgba(203, 205, 208, 1); */
}
.shop-tab .tab{
  width: 22%;
  display: inline-block;
  text-align: center;
  position: relative;
  font-size: 28rpx;
color: #3D3D3D;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.shop-tab .tab.true{
  font-weight: bold;
}
.shop-tab .tab.true::after{
  content: '';
  width: 36rpx;
  height: 6rpx;
  border-radius: 6rpx;
background: #FFD300;
position: absolute;
left: 50%;
bottom: 18rpx;
transform: translate(-50%,0);
}

.box-shadow{
  margin: 35rpx 20rpx 0 20rpx;
background: #FFFFFF;
}
.shop-bg{
  height: 218rpx;
  width: 100%;
}
.shop-type1{
  padding-bottom: 20rpx;
}
.shop-type1 .shop-container{
  margin-top: -225rpx;
}
.shop-type1 .shop-info-box{
  display: flex;
  align-items: center;
  padding: 48rpx 20rpx 30rpx 20rpx;
}
.shop-type1 .shop-logo{
  width: 146rpx;
  height: 146rpx;
}
.shop-type1 .shop-info{
  width: 520rpx;
  margin-left: 20rpx;
}
.shop-type1 .shop-item{
  width: 520rpx;
