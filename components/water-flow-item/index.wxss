
.flow-card{
  width: 340rpx !important;
  padding: 0 0 20rpx 0 !important;
box-shadow: 0px 0px 8px 2px rgba(17, 17, 17, 0.05);
border-radius: 16rpx;
background-color: #fff;
overflow: hidden;
  margin-bottom: 20rpx;
}
.half-box{
  display: flex;
  justify-content:flex-start;
  padding: 0 10rpx;
  
  flex-wrap:wrap;
}
.half-box .paths{
  width: 150rpx;
  margin:20rpx 6rpx 0 5rpx;
}
.half-box .paths-pic{
  width: 150rpx;
  height: 150rpx;
}
.half-box .paths-pic .pic{
  width: 100%;
}
.half-box .des{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 20rpx;
  width:150rpx;
  color: #111111;
}
.half-box .price {
  font-size: 20rpx;
  padding-top: 10rpx;
}
.half-box .price .red{
  color: #FF2B2B;
  font-weight: bold;
}
.half-box .price .new{
  font-size: 28rpx;
  padding-right: 10rpx;
}
.half-box .price .old{
  text-decoration: line-through;  
  color: #CECFCF;
}


.banner{

  width: 340rpx;
  overflow: hidden;
  border-radius: 16rpx 16rpx 0 0;
}
.banner .pic{
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
}



